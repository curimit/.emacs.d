mixin js(...list)
  each item in list
    script(type='text/javascript', src=item)

mixin css(...list)
  each item in list
    link(rel='stylesheet', href=item)

mixin import(...list)
  each item in list
    link(rel='import', href=item)

mixin dom-module(name, params)
  if params == null
    dom-module(id=name)&attributes(attributes)
      +css('../normalize.css/normalize.css')
      style(is='custom-style')
        include:stylus ../one-sample.styl
      template
        block
    script
      include:livescript ../one-sample.ls
  else
    dom-module(name=name attributes=params)&attributes(attributes)
      +css('../normalize.css/normalize.css')
      style(is='custom-style')
        include:stylus ../one-sample.styl
      template
        block
    script
      include:livescript ../one-sample.ls
